<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#DCDCDC"
    android:padding="24dp">

    <!-- Texto de Bienvenida -->
    <TextView
        android:id="@+id/tvBienvenida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Bienvenido!"
        android:textSize="60sp"
        android:textStyle="bold"
        android:textColor="#4F4F4F"
        android:layout_marginBottom="16dp"/>

    <!-- Foto de perfil circular -->
    <ImageView
        android:id="@+id/ivPerfil"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/usuario_perfil"
        android:scaleType="centerCrop"
        android:layout_marginBottom="12dp"
        android:background="@drawable/fondo"/>

    <!-- Nombre de usuario -->
    <TextView
        android:id="@+id/tvUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usuario"
        android:textSize="60sp"
        android:textStyle="bold"
        android:textColor="#4F4F4F"
        android:layout_marginBottom="50dp"/>

    <!-- Contenedor horizontal para los botones, más abajo -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="100dp">  <!-- Aquí los bajamos -->

        <!-- Botón ¿Quiénes Somos? (cuadrado) -->
        <Button
            android:id="@+id/btnQuienesSomos"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:backgroundTint="#BEBEBE"
            android:text="¿Quiénes Somos?"
            android:textColor="#4F4F4F"
            android:layout_marginEnd="16dp"/>

        <!-- Botón Ver tabla (cuadrado) -->
        <Button
            android:id="@+id/btnVerTabla"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:backgroundTint="#BEBEBE"
            android:text="Ver Tabla"
            android:textColor="#4F4F4F"/>
    </LinearLayout>

</LinearLayout>

